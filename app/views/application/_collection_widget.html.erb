<script type="text/html" id="item-container">
	<li>
		<span data-bind="text: name, event: {mouseover: $root.mouseOver, mouseout: $root.mouseOut}, click: $root.clicked"></span>
		<span data-bind="if: $root.itemsSelectable">
			<input type="checkbox" data-bind="checked: isChecked" />
		</span>
	</li>
</script>

<script type="text/html" id="collection-container">
	<li>
		<span data-bind="text: name"></span>
		<span data-bind="if: $root.collectionsSelectable">
			<input type="checkbox" data-bind="checked: isChecked" />
		</span>
		<span data-bind='if: collections.length'>
			<ul>
				<span data-bind="template: {name: 'collection-container', foreach: collections}"></span>
			</ul>
		</span>
		<span data-bind='if: items.length'>
			<!-- Items -->
			<ul>
				<span data-bind="template: {name: 'item-container', foreach: items}"></span>
			</ul>
		</span>
	</li>
</script>


<div class="row" id="collection-widget">
	<div class="col-md-12">		
		<div class="well scroll-vertically">

